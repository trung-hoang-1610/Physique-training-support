<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".InformationAskActivity">

    <ImageButton
        android:id="@+id/backGdrButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="Back"
        android:background="@color/white"
        android:src="@drawable/baseline_arrow_back" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chọn giới tính của bạn"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"/>

    <Button
        android:id="@+id/buttonNam"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGender"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:text="Nam"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/buttonNu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGender"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:text="Nữ"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/buttonNextGdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNam"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="130dp"
        android:backgroundTint="@color/green"
        android:text="  Tiếp  "
        android:textSize="30sp"/>

</RelativeLayout>
